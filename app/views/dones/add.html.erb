<div class="box">
	<div class="box-inner">
		<h1 class="title">Done List</h1>

		<div class="done-flex flex">
			<div class="main-group">
				<div class="input-box">
					<form action="dones" method="post">
						<div class="newtask-box">
							<input type="text" class="task-input--area task-area" name="done" placeholder="やったこと">
							<input type="date" id="today" class="task-input--area" name="date">
							<input type="time" class="task-input--area" name="start_time">
							<input type="time" class="task-input--area" name="end_time">
							<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
							<input id="startBtn" class="task-btn btn" name="start_btn" type="submit" value="追加">
						</div>
					</form>
				</div>
	
				<% if session[:start_time].present? %>
					<div class="tmp-box">
						<h2 class="tmp-main--title">取り掛かり中</h2>
						<ul>
							<li class="tmp-list tmp-title"><%= session[:done] %></li>
							<li class="tmp-list"><%= session[:date] %></li>
							<li class="tmp-list"><%= session[:start_time] %></li>
						</ul>
					</div>
				<% end 	%>
			</div><!-- .main-group -->

			<div class="done-box">
				<h2 class="main-title done-main--title"><span class="done-day"><%= Time.now.strftime("%Y年%m月%d日") %></span>やったこと一覧</h2>
				<% @done.each do |d| %>
					<% if d.email == current_user.email %>
						<ul>
							<li class="done-title"><%= d.done %></li>
							<li class="done-daytime"><%= d.start_time %> ～ <%= d.end_time %></li>
							<li><a href="/<%= d.id %>" class="edit-btn btn">編集</a></li>
							<li>
								<form method="post" action="dones/<%= d.id %>">
									<input type="hidden" name="_method" value="delete">
									<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
									<input type="submit" class="delete-btn btn" name="delete-btn" value="削除">
								</form>
							</li>
						</ul>
					<% end %>
				<% end %>
			</div><!-- .done-box -->
		</div><!-- .done-flex -->

		<div class="add-box">
			<p><a href="dones/add">別にやったことを入力</a></p>
		</div>

	</div><!-- .box-inner -->
</div><!-- .box -->