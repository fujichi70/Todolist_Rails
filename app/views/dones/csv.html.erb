<div class="box">
	<div class="box-inner">
		<h1 class="title">Done List</h1>

			<h2 class="main-title">csv出力</h2>

			<table class="main-table">
				<thead>
					<tr>
						<th class="csv-title">日付</th>
						<th class="csv-title">開始時間</th>
						<th class="csv-title">終了時間</th>
						<th class="csv-title">業務名</th>
						<th class="csv-title">内容</th>
					</tr>
				</thead>
				<tbody>
				<% @done.each do |d| %>
					<% if d.email == current_user.email %>
							<tr>
								<td class="table-daytime"><%= d.date %></td>
								<td class="table-daytime"><%= d.start_time %></td>
								<td class="table-daytime"><%= d.end_time %></td>
								<td class="table-title"><%= d.done %></td>
								<td class="table-daytime"><%= d.description %></td>
							</tr>
					<% end %>
				<% end %>
				</tbody>
			</table>

		<div class="csv-btn--box">
			<%= link_to :back do %>
				<input type="button" class="back-btn btn" value="戻る">
			<% end %>
			<%= link_to dones_csv_path(format: :csv) do %>
				<input type="button" class="btn" value="出力する">
			<% end %>
		</div>	

	</div><!-- .box-inner -->
</div><!-- .box -->