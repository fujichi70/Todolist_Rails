<div class="box">
	<div class="box-inner">
	<h1 class="title">Todo List</h1>

<div class="newtask-box">
	<form action= root_path method="post">
		<input type="text" class="task-input--area" name="task" placeholder="やること">
		<input type="date" id="today" class="task-input--area" name="date">
		<input type="time" class="task-input--area" name="time">
		<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
   		<input class="task-btn" name="task-btn" type="submit" value="追加">
 	</form>

</div>
	
	<div class="task-box">
	<h2 class="main-title">やること一覧</h2>
		<% @tasks.each do |t| %>
	<form action="/<%= t.id %>" method="post">
	<table class="main-table">
		<thead>
		<tr>
			<th>やること</th>
			<th colspan="2">日時</th>
		</tr>
		</thead>
		<tbody>
			<% if t.email == @user %>
			<tr>
			<td><%= t.task %></td>
			<td><%= t.date %></td>
			<td><%= t.time %></td>
			<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
			<td><input type="submit" name="complete-btn" class="complete-btn" value="完了"></td>
			<td><a href="/<%= t.id %>" class="edit-btn">編集</a></td>
			<td>
				<form method="post" action="/<%= t.id %>">
					<input type="hidden" name="_method" value="delete">
					<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
					<input type="submit" name="delete-btn" value="削除">
 		    	</form>
			</td>
			</tr>
			<% end %>
		</tbody>
	</table>
	</form>
		<% end %>
	</div>
	</div>
</div>